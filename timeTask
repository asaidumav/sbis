    <Grid x:Name="g1">
        <Button x:Name="b1" Content="" HorizontalAlignment="Center" Height="62" Margin="0,339,0,0" VerticalAlignment="Top" Width="126" Click="Button_Click"/>
        <TextBlock x:Name="tb1" HorizontalAlignment="Center" Height="72" FontSize ="20"  TextWrapping="Wrap" VerticalAlignment="Center" Width="172"/>

    </Grid>
